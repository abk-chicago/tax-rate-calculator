<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.codeforcoffee.taxratecalculator.MainActivity"
    android:columnCount="2"
    android:useDefaultMargins="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:ems="10"
        android:id="@+id/amountEditText"
        android:maxLength="6"
        android:digits="0123456789"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/amountTextView"
        android:gravity="fill_horizontal"
        android:background="@color/amount_background"
        android:padding="@dimen/textview_padding"
        android:elevation="@dimen/textview_shadow"
        android:layout_gravity="fill_horizontal|center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tax_rate_percentage"
        android:id="@+id/percentTextView"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical|right"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seekbar_height"
        android:layout_row="1"
        android:layout_column="1"
        android:id="@+id/percentSeekBar"
        android:indeterminate="false"
        android:progress="10"
        android:max="100"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tax_due"
        android:id="@+id/taxDueLabelTextView"
        android:layout_row="2"
        android:layout_column="0"
        android:gravity="right"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/taxDueTextView"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@color/result_background"
        android:gravity="center|fill_horizontal"
        android:padding="@dimen/textview_padding"
        android:elevation="@dimen/textview_shadow"
        android:layout_gravity="fill_horizontal|center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/total"
        android:id="@+id/totalLabelTextView"
        android:layout_row="3"
        android:layout_column="0"
        android:gravity="right"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/totalTextView"
        android:layout_row="3"
        android:layout_column="1"
        android:background="@color/result_background"
        android:gravity="center|fill_horizontal"
        android:padding="@dimen/textview_padding"
        android:elevation="@dimen/textview_shadow"
        android:layout_gravity="fill_horizontal|center_horizontal"/>

</GridLayout>
